# var_file.yml.in
# This file contains common configuration variables used across all files

# PostgreSQL server port number, PostgreSQL default port is 5432
PG_PORT: xxxx

# This is the path pf pfile directory 
PFILE_DIRECTORY: /xxxx/xxxx/

# PostgreSQL server version
PG_VERSION: xx

# Directory where data directories will be initialized
PG_CIRRUS_INSTALLATION_DIRECTORY: /xxxx/xxxx/xxxx/

# PostgreSQL server password.
# NOTE: This is cleartext, a security hazard we will handle it later
PG_PASSWORD: xxxx
# Standby servers list name of each standby server and its replication slot
STANDBY_SERVERS:
  - NAME: STANDBY1
    PG_REPLICATION_SLOT: xxxx
  - NAME: STANDBY2
    PG_REPLICATION_SLOT: xxxx
