# conf.yml.in
# This file contains all the variables required by pg_cirrus

# PostgreSQL port
PG_PORT: xxxx
# PostgreSQL version
PG_VERSION: xx
# PostgreSQL data directory path
PG_CIRRUS_INSTALLATION_DIRECTORY: /xxxxxx/xxxxxx/xxxxxx/
# Subnet inside which 3 node cluster will be setup 
CLUSTER_SUBNET: xxx.xxx.xxx.xxx/xx
# Array of Standby Servers with name and replication slot values for each standby server
STANDBY_SERVERS:
  - NAME: STANDBY1
    PG_REPLICATION_SLOT: slot_xxx_xxx_xxx_xxx
  - NAME: STANDBY2
    PG_REPLICATION_SLOT: slot_xxx_xxx_xxx_xxx
